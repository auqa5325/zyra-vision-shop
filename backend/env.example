# Zyra Backend Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration (Required)
DATABASE_URL=postgresql+psycopg2://username:password@host:port/database_name

# JWT Authentication (Required)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# AWS Configuration (Optional - will use local storage if not provided)
# Leave empty for local development without AWS
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=

# Application Settings
DEBUG=true
ENVIRONMENT=development

# ML Models Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
FAISS_INDEX_PATH=artifacts/faiss_products.index
EMBEDDINGS_PATH=artifacts/product_embeddings.npy
ALS_FACTORS_PATH=artifacts/item_factors.npy
DEFAULT_ALPHA=0.6
DEFAULT_TOP_K=10

# Gemini AI Configuration (Required for Chatbot)
GEMINI_API_KEY=your-gemini-api-key-here

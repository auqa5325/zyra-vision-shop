# Database
DATABASE_URL=postgresql://user:password@localhost:5432/zyra
AWS_RDS_ENDPOINT=your-rds-endpoint.region.rds.amazonaws.com
DB_USER=postgres
DB_PASSWORD=your-password
DB_NAME=zyra

# AWS
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=zyra-product-images

# API
API_KEY=your-api-key-here
DEBUG=true
ENVIRONMENT=development

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ML Models
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
FAISS_INDEX_PATH=artifacts/faiss_products.index
EMBEDDINGS_PATH=artifacts/product_embeddings.npy
ALS_FACTORS_PATH=artifacts/item_factors.npy

# Recommendation
DEFAULT_ALPHA=0.6
DEFAULT_TOP_K=10
